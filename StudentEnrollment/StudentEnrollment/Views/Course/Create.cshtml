@model Course;

@{
    ViewData["Title"] = "Create";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="~/css/normalize.css" type="text/css" />
<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
<link rel="stylesheet" href="~/css/base.css" type="text/css" />
<link rel="stylesheet" href="~/css/layout.css" type="text/css" />
<link rel="stylesheet" href="~/css/modules.css" type="text/css" />

<title>Create a Course</title>

<div class="title">
    <h2>Create Course</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-4, create">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher">Teacher</label>
                <input asp-for="Teacher" />
                <span asp-validation-for="Teacher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseTerm">Course Term</label>
                <select asp-for="CourseTerm" asp-items="Html.GetEnumSelectList<CourseTerm>()">
                    <option value="">--- not specified ---</option>
                </select>
                <span asp-validation-for="CourseTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div class="options">
    <a asp-action="Index">Back to List</a>
</div>
